<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Task_App.Controls"
             x:Class="Task_App.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <CollectionView ItemsSource="{Binding Tasks}"
                            SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <controls:TaskCard BindingContext="{Binding .}"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button
              Text="Add"
              Command="{Binding TaskCommand}"/>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
